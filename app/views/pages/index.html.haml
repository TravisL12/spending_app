.container
  %h1 Welcome to Spreadsheet.com!
  .error_alert
    - if flash[:errors_login]
      = render :partial => 'shared/login_signup_errors', :locals => { :errors => flash[:errors_login] }
  .login
    = form_tag login_path do
      = label_tag :username
      = text_field_tag :username
      %br
      = label_tag :password
      = password_field_tag :password
      %br
      = submit_tag 'Login'

  .error_alert
    - if flash[:errors_sign]
      = render :partial => 'shared/login_signup_errors', :locals => { :errors => flash[:errors_sign] }
  
  .sign_up
    = form_for @user, :url => (@user.new_record? ? users_path : user_path(@user))  do |f|
      = f.label :first_name
      = f.text_field :first_name
      %br
      = f.label :last_name
      = f.text_field :last_name
      %br
      = f.label :username
      = f.text_field :username
      %br
      = f.label :email
      = f.text_field :email
      %br
      = f.label :password
      = f.password_field :password
      %br
      = f.label :password_confirmation
      = f.password_field :password_confirmation
      %br
      = f.submit "Sign Up!"
  %br